---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';

interface BlogPost {
  id: number;
  title: string;
  excerpt: string;
  author: string;
  date: Date;
  category: string;
  readTime: string;
  imageUrl: string;
  tags: string[];
}

// Blog post data
const blogPosts: BlogPost[] = [
  {
    id: 1,
    title: "The Science Behind Medical Cannabis Strains",
    excerpt: "Explore the therapeutic differences between indica, sativa, and hybrid cannabis varieties, backed by recent clinical research and patient outcomes...",
    author: "Dr. Sarah Johnson, PhD",
    date: new Date("2024-02-15"),
    category: "Education",
    readTime: "8 min read",
    imageUrl: "/images/blog/cannabis-science.jpg", 
    tags: ["Medical Research", "Cannabis Science", "Clinical Studies", "Patient Education"]
  },
  {
    id: 2, 
    title: "Breakthrough Studies: Cannabis in Modern Pain Management",
    excerpt: "Analysis of groundbreaking clinical trials reveals promising evidence for cannabis-based pain treatments, offering new hope for chronic pain patients...",
    author: "Dr. Michael Chen, MD",
    date: new Date("2024-02-10"),
    category: "Research",
    readTime: "10 min read",
    imageUrl: "/images/blog/clinical-research.jpg",
    tags: ["Pain Management", "Clinical Trials", "Patient Care", "Treatment Innovation"]
  },
  {
    id: 3,
    title: "Patient Guide: Getting Started with Medical Cannabis",
    excerpt: "A comprehensive guide for new patients covering dosing, consumption methods, strain selection, and important safety considerations...",
    author: "Dr. Emily Martinez, PharmD",
    date: new Date("2024-02-01"), 
    category: "Education",
    readTime: "12 min read",
    imageUrl: "/images/blog/patient-guide.jpg",
    tags: ["Patient Guide", "Safety", "Best Practices", "Treatment Basics"]
  }
];

// Format dates in a consistent, readable format
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long', 
    day: 'numeric',
    timeZone: 'UTC'
  }).format(date);
}

const categories = [
  { name: "All Posts", count: blogPosts.length },
  { name: "Research & Studies", count: blogPosts.filter(p => p.category === "Research").length },
  { name: "Patient Guides", count: blogPosts.filter(p => p.category === "Education").length },
  { name: "Treatment Methods", count: 0 },
  { name: "Industry News", count: 0 }
];

const allTags = blogPosts.flatMap(post => post.tags);
const uniqueTags = [...new Set(allTags)];
---

<Layout>
  <Header />
  
  <main class="blog-container">
    <section class="blog-hero">
      <div class="hero-content">
        <h1>Cannabis Research & Education</h1>
        <p>Stay informed with the latest medical cannabis studies, patient guides, and clinical insights</p>
      </div>
    </section>

    <div class="blog-content">
      <aside class="blog-sidebar">
        <div class="search-box">
          <div class="search-wrapper">
            <input 
              type="search" 
              placeholder="Search articles..." 
              aria-label="Search blog posts"
              class="search-input"
            />
            <button 
              type="button"
              class="search-button"
              aria-label="Search"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
              </svg>
            </button>
          </div>
        </div>

        <nav class="categories-box" aria-label="Blog categories">
          <h2>Categories</h2>
          <ul class="category-list">
            {categories.map(cat => (
              <li>
                <a 
                  href={`#${cat.name.toLowerCase().replace(/\s+/g, '-')}`}
                  class={cat.name === "All Posts" ? "active" : ""}
                >
                  {cat.name}
                  <span class="category-count">({cat.count})</span>
                </a>
              </li>
            ))}
          </ul>
        </nav>

        <div class="tags-box">
          <h2>Popular Tags</h2>
          <div class="tags-cloud">
            {uniqueTags.map(tag => (
              <a href={`#tag-${tag.toLowerCase()}`} class="tag">
                {tag}
              </a>
            ))}
          </div>
        </div>
      </aside>

      <section class="blog-posts" aria-label="Blog posts">
        {blogPosts.map(post => (
          <article class="blog-card">
            <div class="blog-card-image">
              <img 
                src={post.imageUrl} 
                alt={`Illustration for ${post.title}`}
                loading="lazy"
                width="400"
                height="225"
              />
            </div>
            <div class="blog-card-content">
              <div class="blog-card-meta">
                <span class="category">{post.category}</span>
                <span class="read-time">{post.readTime}</span>
              </div>
              <h2 class="blog-card-title">
                <a href={`/blog/${post.id}`}>{post.title}</a>
              </h2>
              <p class="blog-card-excerpt">{post.excerpt}</p>
              <div class="blog-card-footer">
                <div class="author">By {post.author}</div>
                <time datetime={post.date.toISOString()}>{formatDate(post.date)}</time>
              </div>
              <div class="blog-card-tags">
                {post.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </section>
    </div>
  </main>
</Layout>

<style>
  .blog-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }

  .blog-content {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 3rem;
    margin-top: 3rem;
  }

  .blog-hero {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    border-radius: 2rem;
    padding: 6rem 3rem;
    text-align: center;
    color: white;
    margin-bottom: 4rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    position: relative;
    overflow: hidden;
    animation: heroGlow 4s ease-in-out infinite alternate;
  }

  @keyframes heroGlow {
    0% { box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25); }
    100% { box-shadow: 0 30px 60px -12px rgba(var(--color-primary-rgb), 0.4); }
  }

  .blog-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at top right, rgba(255,255,255,0.2) 0%, transparent 70%);
    animation: shimmer 8s ease-in-out infinite;
  }

  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }

  .hero-content h1 {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    text-shadow: 0 2px 15px rgba(0, 0, 0, 0.3);
    letter-spacing: -0.03em;
    background: linear-gradient(to right, #ffffff, #f0f0f0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-content p {
    font-size: 1.4rem;
    opacity: 0.95;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.7;
    text-shadow: 0 1px 8px rgba(0, 0, 0, 0.2);
  }

  .blog-sidebar {
    position: sticky;
    top: 2rem;
    height: fit-content;
    transition: transform 0.3s ease;
  }

  .blog-sidebar:hover {
    transform: translateY(-5px);
  }

  .search-wrapper {
    position: relative;
    margin-bottom: 3rem;
  }

  .search-input {
    width: 100%;
    padding: 1.25rem 3rem 1.25rem 1.5rem;
    border: 2px solid transparent;
    border-radius: 1rem;
    font-size: 1.1rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(15px);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 6px rgba(var(--color-primary-rgb), 0.2);
    background: white;
    transform: scale(1.02);
  }

  .search-button {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: var(--color-text-light);
    cursor: pointer;
    padding: 0.5rem;
    transition: all 0.3s ease;
  }

  .search-button:hover {
    color: var(--color-primary);
    transform: translateY(-50%) scale(1.2) rotate(5deg);
  }

  .categories-box,
  .tags-box {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    padding: 2.5rem;
    border-radius: 1.5rem;
    box-shadow: 0 15px 40px -10px rgba(0, 0, 0, 0.15);
    margin-bottom: 3rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: all 0.4s ease;
  }

  .categories-box:hover,
  .tags-box:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 20px 40px -10px rgba(var(--color-primary-rgb), 0.2);
  }

  .categories-box h2,
  .tags-box h2 {
    font-size: 1.75rem;
    font-weight: 800;
    margin-bottom: 1.75rem;
    color: var(--color-text);
    letter-spacing: -0.02em;
    background: linear-gradient(45deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .category-list {
    list-style: none;
    padding: 0;
  }

  .category-list a {
    display: flex;
    justify-content: space-between;
    padding: 1rem;
    color: var(--color-text-light);
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 0.75rem;
  }

  .category-list a:hover,
  .category-list a.active {
    color: var(--color-primary);
    padding-left: 1.5rem;
    background: rgba(var(--color-primary-rgb), 0.1);
    transform: scale(1.05);
  }

  .category-count {
    color: var(--color-text-lighter);
    font-weight: 600;
  }

  .tags-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tag {
    background: var(--color-bg-light);
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.95rem;
    color: var(--color-text-light);
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid transparent;
  }

  .tag:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 4px 12px rgba(var(--color-primary-rgb), 0.3);
  }

  .blog-card {
    background: white;
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    margin-bottom: 3rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(var(--color-primary-rgb), 0.1);
  }

  .blog-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(var(--color-primary-rgb), 0.2);
  }

  .blog-card-image img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .blog-card:hover .blog-card-image img {
    transform: scale(1.1);
  }

  .blog-card-content {
    padding: 2rem;
  }

  .blog-card-meta {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }

  .category {
    color: var(--color-primary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .read-time {
    color: var(--color-text-light);
    font-style: italic;
  }

  .blog-card-title {
    font-size: 1.75rem;
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .blog-card-title a {
    color: var(--color-text);
    text-decoration: none;
    transition: all 0.3s ease;
    background: linear-gradient(to right, var(--color-primary), var(--color-primary));
    background-size: 0% 2px;
    background-repeat: no-repeat;
    background-position: left bottom;
  }

  .blog-card-title a:hover {
    color: var(--color-primary);
    background-size: 100% 2px;
  }

  .blog-card-excerpt {
    color: var(--color-text-light);
    margin-bottom: 2rem;
    line-height: 1.8;
    font-size: 1.1rem;
  }

  .blog-card-footer {
    display: flex;
    justify-content: space-between;
    color: var(--color-text-light);
    font-size: 0.95rem;
    margin-bottom: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(var(--color-primary-rgb), 0.1);
  }

  @media (max-width: 1024px) {
    .blog-content {
      grid-template-columns: 1fr;
    }

    .blog-sidebar {
      position: static;
      margin-bottom: 3rem;
    }
  }

  @media (max-width: 768px) {
    .blog-container {
      padding: 1.5rem;
    }

    .blog-hero {
      padding: 4rem 1.5rem;
    }

    .hero-content h1 {
      font-size: 2.5rem;
    }

    .blog-card-title {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .blog-card-meta,
    .blog-card-footer {
      flex-direction: column;
      gap: 0.75rem;
    }
  }
</style>