---
import Header from '../components/Header.astro';
import { supabase } from '../lib/supabase';
import type { Strain } from '../types/supabase';

// Fetch strains from Supabase
const { data: strains, error } = await supabase
  .from('strains')
  .select('*')
  .order('name');

if (error) {
  console.error('Error fetching strains:', error);
}
---

<Header />

<main class="strains-page">
  <section class="hero">
    <h1>Cannabis Strains Database</h1>
    <p>Explore our comprehensive collection of cannabis strains and their properties</p>
  </section>

  <div class="strains-grid">
    {strains?.map((strain) => (
      <article class="strain-card">
        <div class="strain-image">
          <img src={strain.image_url || '/placeholder-strain.jpg'} alt={strain.name} />
        </div>
        <div class="strain-content">
          <h2>{strain.name}</h2>
          <div class="strain-type">{strain.type}</div>
          <div class="strain-thc">THC: {strain.thc}%</div>
          <div class="strain-cbd">CBD: {strain.cbd}%</div>
          <p class="strain-description">{strain.description}</p>
          <div class="strain-effects">
            <h3>Effects</h3>
            <div class="effects-tags">
              {strain.effects?.map((effect: string) => (
                <span class="effect-tag">{effect}</span>
              ))}
            </div>
          </div>
        </div>
      </article>
    ))}
  </div>
</main>

<style>
  .strains-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 4rem;
    padding: 4rem 0;
    background: linear-gradient(to bottom, var(--color-primary-50), transparent);
    border-radius: 1rem;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 800;
    color: var(--color-gray-900);
    margin-bottom: 1rem;
  }

  .hero p {
    font-size: 1.25rem;
    color: var(--color-gray-600);
    max-width: 600px;
    margin: 0 auto;
  }

  .strains-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .strain-card {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease;
  }

  .strain-card:hover {
    transform: translateY(-4px);
  }

  .strain-image {
    height: 200px;
    overflow: hidden;
  }

  .strain-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .strain-content {
    padding: 1.5rem;
  }

  .strain-content h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-gray-900);
    margin-bottom: 0.5rem;
  }

  .strain-type {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: var(--color-primary-100);
    color: var(--color-primary-700);
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .strain-thc,
  .strain-cbd {
    font-size: 0.875rem;
    color: var(--color-gray-600);
    margin-bottom: 0.5rem;
  }

  .strain-description {
    color: var(--color-gray-600);
    margin-bottom: 1.5rem;
    line-height: 1.5;
  }

  .strain-effects h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-gray-900);
    margin-bottom: 0.5rem;
  }

  .effects-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .effect-tag {
    padding: 0.25rem 0.75rem;
    background: var(--color-gray-100);
    color: var(--color-gray-700);
    border-radius: 9999px;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .strains-page {
      padding: 1rem;
    }

    .hero {
      padding: 2rem 1rem;
    }

    .hero h1 {
      font-size: 2rem;
    }

    .hero p {
      font-size: 1rem;
    }

    .strains-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 