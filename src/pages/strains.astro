---
import Header from '../components/Header.astro';

// Mock data for now
const strains = [
  {
    id: 1,
    name: "Blue Dream",
    type: "Hybrid",
    thc: 18,
    cbd: 0.1,
    description: "A popular strain known for its balanced effects and dreamy euphoria..."
  },
  // Add more mock strains as needed
];
---

<Header />

<main class="strains-page">
  <section class="hero">
    <h1>Cannabis Strains Library</h1>
    <p>Unveil the secrets of medicinal cannabis strains, their euphoric effects, and therapeutic wonders</p>
  </section>

  <div class="strains-grid">
    {strains?.map((strain: any) => (
      <article class="strain-card">
        <div class="strain-content">
          <header class="strain-header">
            <h2>{strain.name}</h2>
            <div class="strain-badges">
              <span class="badge type">{strain.type}</span>
              {strain.thc && <span class="badge thc">THC: {strain.thc}%</span>}
              {strain.cbd && <span class="badge cbd">CBD: {strain.cbd}%</span>}
            </div>
          </header>

          <p class="strain-description">{strain.description}</p>

          {strain.effects && strain.effects.length > 0 && (
            <div class="strain-effects">
              <h3>Primary Effects</h3>
              <div class="effects-tags">
                {strain.effects.map((effect: string) => (
                  <span class="effect-tag">{effect}</span>
                ))}
              </div>
            </div>
          )}
        </div>
      </article>
    ))}
  </div>
</main>

<style>
  .strains-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
    background: linear-gradient(to right, #f0f4f8, #d9e2ec);
  }

  .hero {
    text-align: center;
    margin-bottom: 4rem;
    padding: 4rem 0;
    background: linear-gradient(to bottom, #a0aec0, transparent);
    border-radius: 1rem;
    color: #2d3748;
  }

  .hero h1 {
    font-size: 3.5rem;
    font-weight: 900;
    color: #1a202c;
    margin-bottom: 1rem;
  }

  .hero p {
    font-size: 1.5rem;
    color: #4a5568;
    max-width: 700px;
    margin: 0 auto;
  }

  .strains-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2.5rem;
  }

  .strain-card {
    background: #edf2f7;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 6px 10px -1px rgba(0, 0, 0, 0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    padding: 2rem;
  }

  .strain-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 10px 15px -1px rgba(0, 0, 0, 0.2);
  }

  .strain-header {
    margin-bottom: 1.5rem;
  }

  .strain-header h2 {
    font-size: 1.75rem;
    font-weight: 800;
    color: #2d3748;
    margin-bottom: 1rem;
  }

  .strain-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .badge {
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .badge.type {
    background: #cbd5e0;
    color: #2d3748;
  }

  .badge.thc {
    background: #68d391;
    color: #22543d;
  }

  .badge.cbd {
    background: #63b3ed;
    color: #2b6cb0;
  }

  .strain-description {
    color: #4a5568;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .strain-effects h3 {
    font-size: 1.2rem;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 1rem;
  }

  .effects-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .effect-tag {
    padding: 0.5rem 1rem;
    background: #e2e8f0;
    color: #2d3748;
    border-radius: 9999px;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .strains-page {
      padding: 1rem;
    }

    .hero {
      padding: 2.5rem 1rem;
    }

    .hero h1 {
      font-size: 2.5rem;
    }

    .hero p {
      font-size: 1.2rem;
    }

    .strains-grid {
      grid-template-columns: 1fr;
    }
  }
</style>