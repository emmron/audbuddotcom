---
import { getSession } from '@auth/astro'
import type { Session } from '@auth/core/types'

const session = await getSession(Astro.request) as Session | null
---

<div class="auth-container">
	<section id="sign-in">
		<h2>Welcome Back</h2>
		<p class="subtitle">Sign in to access your account</p>

		{!session ? (
			<div class="social-buttons">
				<a href="/api/auth/signin/github" class="social-button">
					<span class="icon">üê±</span>
					<span>Continue with GitHub</span>
				</a>
				<a href="/api/auth/signin/google" class="social-button">
					<span class="icon">üîç</span>
					<span>Continue with Google</span>
				</a>
				<a href="/api/auth/signin/apple" class="social-button">
					<span class="icon">üçé</span>
					<span>Continue with Apple</span>
				</a>
			</div>
		) : (
			<div class="signed-in">
				<div class="user-info">
					{session.user?.image ? (
						<img 
							src={session.user.image} 
							alt={`${session.user.name}'s avatar`}
							class="avatar" 
							width="48" 
							height="48"
							loading="lazy"
						/>
					) : (
						<div class="avatar-placeholder">üë§</div>
					)}
					<div class="user-details">
						<p class="user-name">{session.user?.name || 'Anonymous User'}</p>
						<p class="user-email">{session.user?.email || 'No email provided'}</p>
					</div>
				</div>
				<a href="/api/auth/signout" class="sign-out-button">
					<span>‚Ü™Ô∏è Sign Out</span>
				</a>
			</div>
		)}

		<p class="auth-footer">
			Don't have an account? <a href="/signup">Sign up</a>
		</p>
	</section>
</div>

<style>
	.auth-container {
		min-height: 100vh;
		display: grid;
		place-items: center;
		padding: 1rem;
		background: #f0f2f5;
	}

	#sign-in {
		width: 100%;
		max-width: 420px;
		padding: 2rem;
		background: white;
		border-radius: 12px;
		box-shadow: 0 2px 8px rgba(0,0,0,0.1);
	}

	h2 {
		font-size: 2rem;
		font-weight: bold;
		text-align: center;
		margin-bottom: 0.5rem;
	}

	.subtitle {
		text-align: center;
		color: #666;
		margin-bottom: 2rem;
	}

	.social-buttons {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.social-button {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 0.75rem 1rem;
		border: 1px solid #ddd;
		border-radius: 8px;
		text-decoration: none;
		color: #333;
		font-weight: 500;
	}

	.social-button:hover {
		background: #f5f5f5;
	}

	.icon {
		font-size: 1.25rem;
	}

	.signed-in {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.user-info {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1rem;
		background: #f5f5f5;
		border-radius: 8px;
	}

	.avatar, .avatar-placeholder {
		width: 48px;
		height: 48px;
		border-radius: 50%;
	}

	.avatar-placeholder {
		background: #ddd;
		display: grid;
		place-items: center;
		font-size: 1.5rem;
	}

	.user-name {
		font-weight: 600;
	}

	.user-email {
		color: #666;
		font-size: 0.9rem;
	}

	.sign-out-button {
		padding: 0.75rem;
		background: #fee2e2;
		color: #dc2626;
		text-align: center;
		border-radius: 8px;
		text-decoration: none;
	}

	.sign-out-button:hover {
		background: #fecaca;
	}

	.auth-footer {
		margin-top: 2rem;
		text-align: center;
		color: #666;
	}

	.auth-footer a {
		color: #2563eb;
		text-decoration: none;
	}

	.auth-footer a:hover {
		text-decoration: underline;
	}

	@media (prefers-color-scheme: dark) {
		.auth-container {
			background: #1a1a1a;
		}

		#sign-in {
			background: #2a2a2a;
		}

		.social-button {
			border-color: #444;
			color: #fff;
		}

		.social-button:hover {
			background: #333;
		}

		.user-info {
			background: #333;
		}

		.user-name {
			color: #fff;
		}

		.user-email {
			color: #999;
		}

		.auth-footer {
			color: #999;
		}
	}
</style>