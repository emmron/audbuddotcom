      {latestDiscussions.length > 0 ? (
        <div class="posts">
          {latestDiscussions.map((discussion: any) => {
            const discussionId = discussion.id;
            return (
              <Fragment key={discussionId}>
                <a href={`/community#${discussionId}`} class="post">
