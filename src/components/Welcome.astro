<style>
  :root {
    --primary-gradient: linear-gradient(135deg, #3b82f6, #60a5fa);
    --hover-gradient: linear-gradient(135deg, #2563eb, #3b82f6);
    --secondary-gradient: linear-gradient(135deg, #f8fafc, #e2e8f0);
    --card-shadow: 0 8px 24px rgba(148, 163, 184, 0.1);
    --hover-shadow: 0 24px 48px rgba(148, 163, 184, 0.15);
    --transition-fast: 0.2s ease;
    --transition-smooth: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    --content-width: min(1200px, 90vw);
    --spacing-base: clamp(1rem, 2vw, 2rem);
    --border-radius: 1.25rem;
  }

  #background {
    position: fixed;
    inset: 0;
    z-index: -1;
    filter: blur(80px);
    transform: scale(1.1);
    object-fit: cover;
    opacity: 0.7;
    mix-blend-mode: overlay;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.5), rgba(0, 0, 0, 0.5));
  }
  #container {
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    min-height: 100vh;
    color: #0f172a;
    display: flex;
    flex-direction: column;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.95) 100%);
    padding: var(--spacing-base);
    box-shadow: var(--card-shadow);
    border-radius: var(--border-radius);
    transition: var(--transition-smooth);
    align-items: center;
    justify-content: center;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  main {
    flex: 1;
    width: var(--content-width);
    margin: 0 auto;
    padding: var(--spacing-base);
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-base);
    align-items: start;
    justify-items: center;
    background: rgba(255, 255, 255, 0.8);
    border-radius: var(--border-radius);
    box-shadow: var(--hover-shadow);
  }
  #hero {
    padding: clamp(3rem, 8vw, 5rem);
    background: rgba(255, 255, 255, 0.98);
    border-radius: var(--border-radius);
    box-shadow: var(--card-shadow);
    transition: var(--transition-smooth);
    backdrop-filter: blur(24px);
    border: 1px solid rgba(255, 255, 255, 0.5);
    margin-top: clamp(3rem, 12vh, 8rem);
    text-align: center;
    color: #1e293b;
  }

  #hero:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
    background: rgba(255, 255, 255, 0.95);
  }

  h1 {
    font-size: clamp(3.5rem, 7vw, 4.5rem);
    font-weight: 900;
    margin: 0 0 1.5em;
    background: linear-gradient(90deg, rgba(59, 130, 246, 1), rgba(37, 99, 235, 1));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1.2;
    letter-spacing: -0.02em;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  }

  p {
    font-size: clamp(1.2rem, 2.2vw, 1.4rem);
    line-height: 1.7;
    color: #334155;
    margin: 0 0 2.5em;
    max-width: 42ch;
  }

  #links {
    display: flex;
    justify-content: flex-start;
    gap: clamp(1.2rem, 3vw, 1.8rem);
    flex-wrap: wrap;
  }

  .button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1.2rem 2.4rem;
    border-radius: 100px;
    text-decoration: none;
    font-weight: 600;
    letter-spacing: 0.5px;
    transition: var(--transition-smooth);
    min-width: 200px;
    font-size: 1.1rem;
  }

  .button.primary {
    background: var(--primary-gradient);
    color: white;
    box-shadow: 0 8px 20px rgba(59, 130, 246, 0.25);
  }

  .button.secondary {
    background: var(--secondary-gradient);
    color: #1e293b;
    box-shadow: 0 8px 20px rgba(148, 163, 184, 0.15);
  }

