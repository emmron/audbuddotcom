---
import background from '../assets/background.svg';
---

<div id="container">
	<img id="background" src={background.src} alt="Background" fetchpriority="high" />
	
	<!-- New Header Section -->
	<header>
		<h1 class="site-title">Medicinal Cannabis Reviews</h1>
		<nav>
			<a href="/strains">Strains</a>
			<a href="https://cannabiscommunity.com">Community</a>
			<a href="https://cannabisreviews.com/blog">Blog</a>
		</nav>
	</header>

	<main>
		<section id="hero">
			<h1>Welcome to the Medicinal Cannabis Strain Reviews</h1>
			<p>Your guide to the best medicinal cannabis strains available in Australia.</p>
			<section id="links">
				<a class="button" href="/strains">View Strains</a>
				<a class="button" href="https://cannabiscommunity.com">Join our Community</a>
			</section>
		</section>
	</main>

	<a href="https://cannabisreviews.com/blog" id="news" class="box">
		<h2>What's New in Medicinal Cannabis?</h2>
		<p>Explore the latest strains, benefits, and reviews of medicinal cannabis in Australia.</p>
	</a>
</div>

<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(80px);
	}

	#container {
		font-family: 'Arial', sans-serif;
		height: 100%;
		color: #333;
	}

	/* Header Styles */
	header {
		background: rgba(255, 255, 255, 0.9);
		padding: 20px;
		text-align: center;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
	}

	.site-title {
		margin: 0;
		font-size: 2.5em;
		color: #2c3e50;
	}

	nav {
		margin-top: 10px;
	}

	nav a {
		margin: 0 15px;
		color: #34495e;
		text-decoration: none;
		font-size: 1.1em;
	}

	nav a:hover {
		text-decoration: underline;
	}

	main {
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
		padding: 20px;
	}

	#hero {
		padding: 30px;
		background: rgba(255, 255, 255, 0.9);
		border-radius: 15px;
		box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
		transition: transform 0.3s;
	}

	#hero:hover {
		transform: translateY(-5px);
	}

	h1 {
		font-size: 2.8em;
		margin: 0.5em 0;
		color: #2c3e50;
	}

	p {
		font-size: 1.3em;
		margin: 0.5em 0 1.5em;
		color: #34495e;
	}

	#links {
		display: flex;
		justify-content: center;
		gap: 30px;
	}

	#links a {
		display: inline-block;
		padding: 14px 24px;
		color: white;
		background: linear-gradient(90deg, #4caf50, #81c784);
		border-radius: 5px;
		text-decoration: none;
		
		transition: background 0.3s, transform 0.3s;
	}

	#links a:hover {
		background: linear-gradient(90deg, #388e3c, #66bb6a);
		transform: scale(1.05);
	}

	.box {
		padding: 20px;
		background: rgba(255, 255, 255, 0.95);
		border-radius: 10px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
		margin-top: 20px;
	}

	h2 {
		margin: 0 0 0.5em;
		font-size: 1.8em;
		color: #2c3e50;
	}

	#news {
		position: absolute;
		bottom: 16px;
		right: 16px;
		max-width: 300px;
		text-decoration: none;
		transition: background 0.2s, transform 0.3s;
	}

	#news:hover {
		background: rgba(255, 255, 255, 0.7);
		transform: translateY(-3px);
	}

	#news h2, #news p {
		color: #34495e;
	}
</style>
