  }

  .author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .author-avatar {
    width: 40px;
    height: 40px;
    background: #f1f5f9;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid rgba(59, 130, 246, 0.1);
  }

  .author-name {
    font-weight: 600;
    color: #1e293b;
    font-size: 1rem;
  }

  .post-stats {
    display: flex;
    gap: 1.5rem;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #64748b;
    font-size: 0.95rem;
    font-weight: 500;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: #f8fafc;
    border-radius: var(--border-radius);
  }

  .empty-icon {
    color: #94a3b8;
    margin-bottom: 1.5rem;
  }

  .empty-text {
    color: #475569;
    font-size: 1.2rem;
    margin-bottom: 2rem;
    font-weight: 500;
  }

  @media (min-width: 768px) {
    main {
      grid-template-columns: 1fr 420px;
      align-items: start;
    }

    #hero {
      position: sticky;
      top: var(--spacing-base);
    }
  }

  @media (max-width: 767px) {
    main {
      padding: var(--spacing-base) 1.2rem;
    }

    #hero {
      padding: 2.5rem;
    }

    .post-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .post-footer {
      flex-direction: column;
      gap: 1.2rem;
      align-items: flex-start;
    }

    .post-stats {
      width: 100%;
      justify-content: space-around;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    * {
      animation: none !important;
      transition: none !important;
    }
  }
</style>
